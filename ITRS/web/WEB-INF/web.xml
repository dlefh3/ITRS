    </servlet>
    <servlet>
        <servlet-name>Approve</servlet-name>
        <servlet-class>base.Approve</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseMain</servlet-name>
        <servlet-class>base.PurchaseMain</servlet-class>
    </servlet>
    <servlet><servlet-name>PurchaseDetail</servlet-name><servlet-class>base.PurchaseDetail</servlet-class></servlet><servlet><servlet-name>Purchase</servlet-name><servlet-class>base.Purchase</servlet-class></servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>base.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/Admin</url-pattern>
